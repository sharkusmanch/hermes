{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "schedule": [
    "at any time"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "description": "Group all hermes Dockerfile updates",
      "matchFileNames": ["Dockerfile"],
      "groupName": "hermes dependencies"
    },
    {
      "description": "Auto-merge patch updates for CLI tools",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    },
    {
      "description": "Auto-merge minor updates for CLI tools",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Dockerfile ARG versions with renovate comments",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s*\\nARG\\s+\\w+_VERSION=\"(?<currentValue>.*?)\""
      ],
      "versioningTemplate": "semver"
    }
  ]
}
