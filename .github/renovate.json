{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "schedule": [
    "at any time"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "description": "Group all hermes Dockerfile updates (non-major)",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "hermes dependencies"
    },
    {
      "description": "Auto-merge patch updates",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    },
    {
      "description": "Auto-merge minor updates",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    },
    {
      "description": "Major updates require manual review",
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "description": "Node.js - only LTS versions (even major numbers)",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "allowedVersions": "/^(22|24|26)\\./",
      "automerge": false
    },
    {
      "description": "Helm - stay on v3.x for now",
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["helm/helm"],
      "allowedVersions": "< 4.0.0"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Dockerfile ARG versions with renovate comments",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s*\\nARG\\s+\\w+_VERSION=\"(?<currentValue>.*?)\""
      ],
      "versioningTemplate": "semver"
    }
  ]
}
